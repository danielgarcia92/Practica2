<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <HorizontalScrollView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:id="@+id/horizontalScrollView3" />

        <EditText
            android:id="@+id/eladocu"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:hint="@string/ladocu"
            android:inputType="phone"
            android:textSize="20sp" />

        <HorizontalScrollView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/horizontalScrollView" />

        <EditText
            android:id="@+id/eradio"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/radio"
            android:inputType="phone"
            android:textSize="20sp" />

        <HorizontalScrollView
            android:layout_width="61dp"
            android:layout_height="match_parent"
            android:id="@+id/horizontalScrollView4" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <HorizontalScrollView
            android:layout_width="61dp"
            android:layout_height="match_parent"
            android:id="@+id/horizontalScrollView5" />

        <EditText
            android:id="@+id/ebase"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/base"
            android:inputType="phone"
            android:textSize="20sp" />

        <HorizontalScrollView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/horizontalScrollView2" />

        <EditText
            android:id="@+id/ealtura"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/altura"
            android:inputType="phone"
            android:textSize="20sp" />

        <HorizontalScrollView
            android:layout_width="61dp"
            android:layout_height="match_parent"
            android:id="@+id/horizontalScrollView6" />
    </LinearLayout>

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/cuadrado"
            android:id="@+id/radio_cuadro"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/triangulo"
            android:id="@+id/radio_triangulo"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/rectangulo"
            android:id="@+id/radio_rectangulo"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/circulo"
            android:id="@+id/radio_circulo"
            android:onClick="onRadioButtonClicked"/>

    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calcular"
        android:onClick="calcular"
        android:id="@+id/ecalcular"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:id="@+id/tresultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/darkred"
        android:hint="@string/resultado"
        android:inputType="phone"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
