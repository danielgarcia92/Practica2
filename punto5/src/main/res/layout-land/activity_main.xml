<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5sp"
    android:orientation="vertical">

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.45"
            android:text="@string/nombre"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/eNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/hint_nombre"
            android:inputType="textPersonName"
            android:textSize="20sp" />

        <RadioButton android:id="@+id/radio_masculino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkviolet"
            android:layout_weight="1"
            android:onClick="onRadioButtonClicked"
            android:text="@string/rbmasculino" />

        <RadioButton android:id="@+id/radio_femenino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkviolet"
            android:layout_weight="1"
            android:onClick="onRadioButtonClicked"
            android:text="@string/rbfemenino" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/correo"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/eCorreo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/hint_correo"
            android:inputType="textEmailAddress"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tel"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/eTel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/hint_tel"
            android:inputType="phone"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/tbotonfecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkorange"
            android:layout_gravity="center"
            android:onClick="setDate"
            android:text="@string/ingfecha" />

        <Spinner
            android:id="@+id/spinnerf"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkviolet"
            android:layout_weight="1"
            android:onClick="onCheckboxClicked"
            android:text="@string/futbol" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkviolet"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:onClick="onCheckboxClicked"
            android:text="@string/voleibol" />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkviolet"
            android:layout_weight="1"
            android:onClick="onCheckboxClicked"
            android:text="@string/natacion" />

        <CheckBox
            android:id="@+id/checkBox4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkviolet"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:onClick="onCheckboxClicked"
            android:text="@string/basketball" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nombre"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/tTel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tel"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tsex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sexo"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tCorreo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/correo"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="3">

            <TextView
                android:id="@+id/tcity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/city"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tdeporte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/deporte"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tfecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/editfecha"
                android:textSize="20sp" />

            <Button
                android:id="@+id/boton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/darkred"
                android:layout_gravity="center"
                android:text="@string/boton"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>